{
  "name": "flashcard",
  "version": "0.0.1",
  "description": "flashcard web app using Nestjs",
  "author": "Pham Ngoc Hung",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "env-cmd -f .env.seeding typeorm-ts-node-commonjs -d src/database/data-source.ts",
    "migration:up": "pnpm typeorm migration:run",
    "migration:down": "pnpm typeorm migration:revert",
    "migration:show": "pnpm typeorm migration:show",
    "migration:create": "typeorm migration:create",
    "migration:generate": "pnpm typeorm migration:generate --pretty",
    "db:create": "env-cmd -f .env.seeding ts-node ./node_modules/typeorm-extension/bin/cli.cjs db:create",
    "db:drop": "env-cmd -f .env.seeding ts-node ./node_modules/typeorm-extension/bin/cli.cjs db:drop",
    "seed:run": "env-cmd -f .env.seeding ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run",
    "seed:create": "env-cmd -f .env.seeding ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:create"
  },
  "dependencies": {
    "@aws-sdk/client-cloudfront": "^3.764.0",
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/cloudfront-signer": "^3.734.0",
    "@aws-sdk/s3-request-presigner": "^3.758.0",
    "@keyv/redis": "^4.3.2",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.11",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.11",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.0.6",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "argon2": "^0.41.1",
    "cache-manager": "^6.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.6.0",
    "compression": "^1.8.0",
    "express": "^5.0.1",
    "helmet": "^8.0.0",
    "keyv": "^5.3.2",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "multer": "1.4.5-lts.1",
    "nanoid": "^5.1.4",
    "nestjs-pino": "^4.3.1",
    "pg": "^8.14.1",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.33.5",
    "streamifier": "^0.1.1",
    "tslib": "^2.8.1",
    "typeorm": "^0.3.21",
    "typeorm-extension": "^3.7.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.11",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.9",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/ms": "^2.1.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.10",
    "@types/streamifier": "^0.1.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "env-cmd": "^10.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "packageManager": "pnpm@10.6.3",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "@swc/core",
      "argon2",
      "bcrypt",
      "nestjs-pino",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "bcrypt"
    ]
  }
}
